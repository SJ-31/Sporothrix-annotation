import java.time.*
Date now = new Date()
conda.enabled = true
includeConfig 'config/maker_params.config'
includeConfig 'config/finishing.config'
includeConfig 'config/controller.config'
includeConfig 'config/rnaseq.config'
params.tracedir = "${projectDir}/info"
params.timestamp = now.format("yyyyMMdd-HH-mm-ss")
params.none = 'NO_FILE'

timeline {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_timeline.html"
}
report {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_report.html"
}
trace {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_trace.txt"
}
dag {
    enabled = true
    file = "${params.tracedir}/${params.timestamp}_dag.svg"
}

params.outdirInitial = "$projectDir/results/assembly/1-initialChecks"
params.outdirTrim = "$projectDir/results/assembly/2-postTrim"
params.assess = "$projectDir/results/assembly/4-assess"

params.mqcOutdirI = "$params.outdirInitial/multiqc/"
params.mqcOutdirT = "$params.outdirTrim/multiqc/"
params.bbdukOut = "$projectDir/results/assembly/2.5-bbduk_flagged_seqs/"
params.mqcOutdirA = "$params.assess/multiqc/"

params.spadesOut = "$projectDir/results/assembly/3-spades"
params.soapOut = "$projectDir/results/assembly/3-soap"
params.megaOut = "$projectDir/results/assembly/3-megahit"

params.buscoOut = "$params.assess/busco"
params.quastOut = "$params.assess/quast"
params.quastRef = "$projectDir/data/reference/ncbi/S_schenckii_refseq/S_schenckii_genome.fasta"
params.quastRefF = "$projectDir/data/reference/ncbi/S_schenckii_refseq/S_schenckii.gff"
params.repeats = "$projectDir/results/repeatlib/"
params.repeat_ref = "$projectDir/data/reference/repeats/"
params.spadesargs = "--trusted-contigs /home/sc31/My_files/MB_internship/data/reference/genomes/S_schenckii_genome.fasta"
params.bbduk_args = 'k=31 -Xmx1G -Xms16M'
